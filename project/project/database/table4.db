from tkinter import *
import sqlite3
root=Tk()
root.title("permission information")
root.geometry("500x500+0+0")
perid=IntVar()
perroleid=IntVar()
permodule=StringVar()
pername=StringVar()
def database():
    perid1=perid.get()
    perroleid1=perroleid.get()
    permodule1=permodule.get()
    pername1=pername.get()
    conn=sqlite3.connect('permission1.db')
    c=conn.cursor()
    c.execute("INSERT INTO permission1 (per_id,per_role_id,per_module,per_name) VALUES(?,?,?,?)",(perid1,perroleid1,permodule1,pername1))
    conn.commit()
    conn.close()
la=Label(root,text="permission information",width=20,font=('Calibri',20,"bold"),bg="yellow",fg="red")
la.place(x=90,y=53)
la1=Label(root,text='PerId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la1.place(x=80,y=130)
entry1=Entry(root,textvariable=perid)
entry1.place(x=240,y=130)
la2=Label(root,text='PerRoleId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la2.place(x=80,y=180)
entry2=Entry(root,textvariable=perroleid)
entry2.place(x=240,y=180)
la3=Label(root,text='PerModule',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la3.place(x=80,y=230)
entry3=Entry(root,textvariable=permodule)
entry3.place(x=240,y=230)
la4=Label(root,text='PerName',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la4.place(x=80,y=280)
entry4=Entry(root,textvariable=pername)
entry4.place(x=240,y=280)
button=Button(root,text='Submit',width=20,bg='brown',fg='white',command=database)
button.place(x=300,y=380)
root.mainloop()
