from tkinter import *
import sqlite3
root=Tk()
root.title("permission information")
root.geometry("500x500+0+0")
addstuid=IntVar()
addid=IntVar()
adddesc=StringVar()
addtype=StringVar()
addpiace=StringVar()
def database():
    addstuid1=addstuid.get()
    addid1=addid.get()
    adddesc1=adddesc.get()
    addtype1=addtype.get()
    addpiace1=addpiace.get()
    conn=sqlite3.connect('address1.db')
    c=conn.cursor()
    c.execute("INSERT INTO address1 (add_stu_id,add_id,add_desc,add_type,add_piace) VALUES(?,?,?,?,?)",(addstuid1,addid1,adddesc1,addtype1,addpiace1))
    conn.commit()
    conn.close()
la=Label(root,text="address information",width=20,font=('Calibri',20,"bold"),bg="yellow",fg="red")
la.place(x=90,y=53)
la1=Label(root,text='AddStudId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la1.place(x=80,y=130)
entry1=Entry(root,textvariable=addstuid)
entry1.place(x=240,y=130)
la2=Label(root,text='AddId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la2.place(x=80,y=180)
entry2=Entry(root,textvariable=addid)
entry2.place(x=240,y=180)
la3=Label(root,text='AddDesc',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la3.place(x=80,y=230)
entry3=Entry(root,textvariable=adddesc)
entry3.place(x=240,y=230)
la4=Label(root,text='Addtype',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la4.place(x=80,y=280)
entry4=Entry(root,textvariable=addtype)
entry4.place(x=240,y=280)
la5=Label(root,text='AddPiace',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la5.place(x=80,y=330)
entry5=Entry(root,textvariable=addpiace)
entry5.place(x=240,y=330)
button=Button(root,text='Submit',width=20,bg='brown',fg='white',command=database)
button.place(x=300,y=380)
root.mainloop()
