from tkinter import *
import sqlite3
root=Tk()
root.title("user information")
root.geometry("500x500+0+0")
userid=IntVar()
username=StringVar()
usermobile=IntVar()
useremail=StringVar()
useraddress=StringVar()
userpassword=StringVar()
def database():
    userid1=userid.get()
    username1=username.get()
    usermobile1=usermobile.get()
    useremail1=useremail.get()
    useraddress1=useraddress.get()
    userpassword1=userpassword.get()
    conn=sqlite3.connect('user.db')
    c=conn.cursor()
    c.execute("INSERT INTO user1 (user_id,user_name,user_mobile,user_email,user_address,user_password) VALUES(?,?,?,?,?,?)",(userid1,username1,usermobile1,useremail1,useraddress1,userpassword1))
    conn.commit()
    conn.close()
la=Label(root,text='user information',width=20,font=('Calibri',20,"bold"),bg="yellow",fg="red")
la.place(x=90,y=53)
la1=Label(root,text='UserId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la1.place(x=80,y=130)
entry1=Entry(root,textvariable=userid)
entry1.place(x=240,y=130)
la2=Label(root,text='UserName',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la2.place(x=80,y=180)
entry2=Entry(root,textvariable=username)
entry2.place(x=240,y=180)
la3=Label(root,text='UserMobile',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la3.place(x=80,y=230)
entry3=Entry(root,textvariable=usermobile)
entry3.place(x=240,y=230)
la4=Label(root,text='UserEmail',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la4.place(x=80,y=280)
entry4=Entry(root,textvariable=useremail)
entry4.place(x=240,y=280)
la5=Label(root,text='UserAddress',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la5.place(x=80,y=330)
entry5=Entry(root,textvariable=useraddress)
entry5.place(x=240,y=330)
la6=Label(root,text='UserPassword',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la6.place(x=80,y=380)
entry6=Entry(root,textvariable=userpassword)
entry6.place(x=240,y=380)
button=Button(root,text='Submit',width=20,bg='brown',fg='white',command=database)
button.place(x=300,y=430)
root.mainloop()
