from tkinter import *
import sqlite3
root=Tk()
root.title("login information")
root.geometry("500x500+0+0")
loginid=IntVar()
loginroleid=IntVar()
loginusername=StringVar()
userpassword=StringVar()
def database():
    loginid1=loginid.get()
    loginroleid1=loginroleid.get()
    loginusername1=loginusername.get()
    userpassword1=userpassword.get()
    conn=sqlite3.connect('login1.db')
    c=conn.cursor() 
    c.execute("INSERT INTO login1 (login_id,login_role_id,login_username,user_password) VALUES(?,?,?,?)",(loginid1,loginroleid1,loginusername1,userpassword1))
    conn.commit()
    conn.close()
la=Label(root,text='login information',width=20,font=('Calibri',20,"bold"),bg="yellow",fg="red")
la.place(x=90,y=53)
la1=Label(root,text='LoginId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la1.place(x=80,y=130)
entry1=Entry(root,textvariable=loginid)
entry1.place(x=240,y=130)
la2=Label(root,text='LoginRoleId',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la2.place(x=80,y=180)
entry2=Entry(root,textvariable=loginroleid)
entry2.place(x=240,y=180)
la3=Label(root,text='LoginUserName',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la3.place(x=80,y=230)
entry3=Entry(root,textvariable=loginusername)
entry3.place(x=240,y=230)
la4=Label(root,text='UserPassword',width=20,font=('Calibri',10,"bold"),bg="yellow",fg="red")
la4.place(x=80,y=280)
entry4=Entry(root,textvariable=userpassword)
entry4.place(x=240,y=280)
button=Button(root,text='Submit',width=20,bg='brown',fg='white',command=database)
button.place(x=300,y=380)
root.mainloop()

